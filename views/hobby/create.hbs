<h1>Hobby Information</h1>
<hr>

<div>
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="name">Name: *</label>
                <input type="text" class="form-control" name="name" id="name" required />
            </div>
            <div class="form-group col-md-6">
                <label for="category">Category: *</label>
                <select name="category" id="category" >
                {{#each categories}}
                    <option>{{this.name}}</option>
                {{/each}}
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="review">Review: *</label>
                <textarea class="form-control" name="review" id="review" required></textarea>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="recommandation">Recommandation: *</label>
            <input type="text" class="form-control" name="recommandation" id="recommandation" required />
        </div>
        <div class="form-group col-md-6">
            <label for="referenceSite">Reference Site:</label>
            <textarea name="referenceSite" class="form-control" id="referenceSite"></textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="cost">Cost:</label>
                <input type="number" class="form-control" min="1" name="cost" id="cost" />
            </div>
            <button type="submit" class="btn mt-3 Button">Save</button>
    </form>
</div>
