<h1 class="mt-3">My hobby</h1>
<h3>Introducing My hobby</h3>
{{!-- only users can add new hobby --}}
{{!-- {{#if user}}  --}}
<button class="btn mt-3 Button"><a href="/hobby/create">Add a New Hobby</a></button>
{{!-- {{/if}} --}}

<table class="table table-striped table-hover">
    <thead>
        <th>Name</th>
        <th>Category</th>
        <th>Review</th>
        <th>Recommandation</th>
        <th>Reference Site</th>
        <th>Cost</th>
        {{#if user}}
            <th class="text-center">Actions</th>
        {{/if}}
    </thead>
    <tbody>
        {{#each hobbys}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.review}}</td>
                <td>{{this.recommandation}}</td>
                <td>{{this.referenceSite}}</td>
                {{#if ../user}}
                    <td class="text-center">
                        <a href="/hobby/edit/{{this._id}}" title="Edit">Edit</a>
                        
                        <a href="/hobby/delete/{{this._id}}" title="Delete" onclick="return confirmDelete();">
                        Delete
                        </a>
                                        
                    </td>
                {{/if}}
                {{!-- <td>{{this.hobby}}</td> --}}
            </tr>
        {{/each}}
    </tbody>
</table>

